# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4  # or another supported model like gpt-3.5-turbo

# Video Generation Settings
DEFAULT_VIDEO_WIDTH=1080
DEFAULT_VIDEO_HEIGHT=1920  # Vertical format for Shorts
MAX_VIDEO_DURATION=58  # Maximum duration in seconds for YouTube Shorts

# Audio Settings
SAMPLE_RATE=44100
BITRATE='192k'
AUDIO_CHANNELS=2

# Whisper Settings
WHISPER_MODEL=base  # base, small, medium, large, or large-v2
WHISPER_DEVICE=cuda  # cuda, cpu, or auto

# Face Detection Settings
FACE_DETECTION_CONFIDENCE=0.7
MIN_FACE_SIZE=50  # Minimum face size in pixels

# Debug Settings
DEBUG=False
LOG_LEVEL=INFO

# Output Directories
OUTPUT_DIR=output
TEMP_DIR=temp

# Optional: Proxy Settings (if needed)
# HTTP_PROXY=http://your-proxy:port
# HTTPS_PROXY=https://your-proxy:port
